<div class="container">

<%= simple_form_for @add, html: {:class => 'inline-form', multipart: true} do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


	<!--fields rendered in the New Ad view-->

	<div class ="field">
	<%= f.label :category %> </br>
    <%= f.input_field :category , collection: Add::CATEGORY, prompt: "Select Category" %>
    </div>
    
    <div class ="field">
    <%= f.label :title %></br>
    <%= f.input_field :title %>
    </div>
    
    <div class ="field">
    <%= f.label :description %> </br>
    <%= f.input_field :description %>
    </div>
    <div class ="field">
   	<%= f.label :vintage %> </br>
    <%= f.input_field :vintage, collection: Add::VINTAGE, prompt: "What is the Vintage" %>
    </div>
    
    <div class="field">
    <%= f.label :price %> </br>
    <%= f.input_field :price %>
    </div>
    
    <div class="field">
    <%= f.input :image, as: :file, input_html: { class:"file-input adds-image"}, label: false, wrapper: false %>
	</div>
	
<!--Button to submit info submitted into the fields -->

	</br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
</div>
